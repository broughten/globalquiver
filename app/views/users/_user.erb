<% content_for :javascript do %>
$(document).ready(function() {
  $(".user-link<%=user.id%>").click(function(){
    window.location=$(this).find("a").attr("href"); return false;
  });

  $(".user-link<%=user.id%>").mouseover(function() {
    $(".user-link<%=user.id%>").css("background-color","#C5C2C4");
  });

  $(".user-link<%=user.id%>").mouseout(function() {
    $(".user-link<%=user.id%>").css("background-color","#eeeeee");
  });
});
<% end %>
<ul id="list-table">
  <li class="user-link<%=user.id%> pic">
    <div id="centering-div">
      <%= link_to "", user_path(user)%>
      <% if user.image.nil? %>
        <span class="muted-text">No Photo</span>
    
      <% else %>
    
        <%= image_tag(user.image.data.url(:thumb)) %>
    
      <% end %>
    </div>
  </li>
  <li class="user-link<%=user.id%> name">
    <div id="centering-div">
      <p>
        <%= link_to "", user_path(user)%>
        <%=h user.full_name %>
      </p>
    </div>
  </li>
  <li class="user-link<%=user.id%> location">
    <div id="centering-div">
      <% if user.location %>
      <p>
        <%= link_to "", user_path(user)%>
        <%=h user.location.locality unless user.location.locality.blank? %>
        <%=h user.location.region unless user.location.region.blank? %>
        <%=h user.location.country unless user.location.region.blank? %>
      </p>
      <% else %>
        Location not listed
      <% end %>
    </div>
  </li>
</ul>
<div class="clear"></div>