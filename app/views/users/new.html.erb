<h1>Signup</h1>

<h3>Already have an account?</h3>
  <%= link_to 'Login', new_session_path, :class=>'call_to_action' %>
<% form_for :user,
            :url => users_url(:protocol => env_ssl_protocol),
            :html => { :method => 'POST',
            :id => 'signup_form' } do |form| %>
  <%= form.error_messages %>
  <div class="user_fields">
    <%= render :partial => '/users/new_fields', :object => form %>
  </div>

  <div class="submit">
    <%= form.submit 'Sign Up', :class => 'submitBtn' %>
  </div>
<% end -%>


