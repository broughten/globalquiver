
<div id="locationPicker">
  <h3>Choose a location or enter a <%=link_to "new one", new_location_path%>.<h3>

    <select id="board_location_selector" onchange="set_board_location_id(this.value)" >
      <% @existing_locations.each do |location| %>
        <option value="<%= location.id %>">
          <%= location.street %> <%= location.locality %>, <%= location.region %>
        </option>
      <% end %>
    </select>
</div>