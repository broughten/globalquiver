<% content_for :head do %>
  <%= stylesheet_link_tag 'overview', :media => 'screen' %>
<% end %>

<h2> What's in my quiver? </h2>

<div id="my_boards">
	<h2>Your local quiver</h2>
	<%= link_to "Create New Board", new_board_path%>
	<table id="my_board_overview">
	<thead>
		<tr>
			<td>Description</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
		</tr>
	</thead>
	
	<%for board in @user.boards %>
	 <tr>
	 	<td>
			<%=h board.model%> by <%=h board.maker%>
		</td>
		<td>
			<%= link_to "Delete", board, :confirm => "Are you sure?", :method=>:delete%>
		</td>
	 </tr>
	<%end%>
	</table>
	
</div>

<div id="my_board_reservations">
	<h2>Your global quiver</h2>
</div>

