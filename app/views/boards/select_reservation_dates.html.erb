<% if @board.user_is_owner(current_user) %>
    <% if @board.user_is_owner(current_user) %>
      <h2>Which days is this board <strong>not</strong> available?</h2>
      <h3>Select the days you won't be able to rent or lend this board and click the button below.
      <br>You can always return to change these dates later.</h3>
    <% else %>
      <h2>Which days would you like to reserve this board?</h2>
      <h3>Select the days you want and click the button below.  You can cancel a reservation with at least 48 hours notice.</h3>
    <% end %>
    <% form_for @board do |f| %>
      <%= f.error_messages %>
      <%= render :partial => '/unavailable_dates/form' %>
      <div id="submit-reservation">
        <p>
          <%= f.submit submit_button_text_for(current_user, @board) %>
        </p>
      </div>
    <% end %>
  <% end %>
