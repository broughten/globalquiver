<% content_for :head do %>
  <%= stylesheet_link_tag 'overview', :media => 'screen' %>
<% end %>

<% if current_user.is_a?(Surfer) %>
<h1>What's in your quiver?</h1>
<% else %>
<h1>Your rental fleet</h1>
<% end %>

<div id="overview-left">
  <div id="my_boards">
    <% if current_user.is_a?(Surfer) %>
      <h2>Boards you've added to the Global Quiver</h2>
      <%if current_user.owned_boards.empty? %>
      <p>You haven't added any boards to the Global Quiver.  Maybe you don't have any extras or don't live by the coast.  But if you do have extras, please consider making the community better by</p>
      <%= link_to "adding one", new_board_url %>
      <% end %>
    <% else %>
      <h2>Below are the boards you are tracking via Global Quiver:</h2>
      <%if current_user.owned_boards.empty? %>
      <p>You haven't set up your shop on Global Quiver yet.  Get started by </p>
      <%= link_to "adding a board.", new_board_url %>
      <% end %>
    <% end %>
    <% if !current_user.owned_boards.empty? %>
      <div class="view-tabs">
        <%= link_to "Board View" %> |
        <%= link_to "Calendar View" %>
      </div>
      <ul id="owned-board-headings">
        <li>Pic</li>
        <li>Model</li>
        <li>Type</li>
        <li>Actions</li>
      </ul>
      <%for board in @user.owned_boards %>
        <ul id="owned-board-table">
          <li>
            <%= image_tag(board.images.first.data.url(:thumb)) if !board.images.empty? %>
          </li>
          <li>
            <%=h board.model %> by <%=h board.maker%>
          </li>
          <li>
            <%=h board.style.name%>
          </li>
          <li>
            <%= link_to "Details", board_path(board)%><br/>
            <%= link_to "Edit", board, :method=>:edit%><br/>
            <%= link_to "Delete", board, :confirm => "Are you sure?", :method=>:delete%>
            </li>
        </ul>
        <div class="clear"></div>
      <%end%>
    <% end %>
  </div>
  <% if current_user.is_a?(Surfer) %>
  <div id="my_board_reservations">
    <h2>Boards you've reserved in the Global Quiver</h2>
    <%if current_user.reserved_boards.empty? %>
      <p>You don't have any board reservations yet.  Get started by <%= link_to "finding a board.", new_board_search_url %></p>
    <% end %>
    <% if !current_user.reserved_boards.empty? %>
      <div class="view-tabs">
        <%= link_to "Board View" %> |
        <%= link_to "Calendar View" %>
      </div>
      <ul id="owned-board-headings">
        <li>Pic</li>
        <li>Model</li>
        <li>Type</li>
        <li>Actions</li>
      </ul>
      <%for board in @user.reserved_boards %>
        <ul id="owned-board-table">
          <li>
            <%= image_tag(board.images.first.data.url(:thumb)) if !board.images.empty? %>
          </li>
          <li>
            <%=h board.model %> by <%=h board.maker%>
          </li>
          <li>
            <%=h board.style.name%>
          </li>
          <li>
            <%= link_to "Details", board_path(board)%><br/>
            <%= link_to "Edit", board, :method=>:edit%><br/>
            <%= link_to "Delete", board, :confirm => "Are you sure?", :method=>:delete%>
            </li>
        </ul>
        <div class="clear"></div>
      <%end%>
    <% end %>
  </div>
  <% end %>

</div>


