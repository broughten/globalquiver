<% content_for :head do %>
  <%= stylesheet_link_tag 'board_searches', :media => 'screen' %>
<% end %>

<h1>Find boards to borrow or rent</h1>
<br>
<h3>On this page you can enter information about where 
	you'll be surfing along with what type of board you're looking for.</h3>
<h3>We'll match these criteria with boards available for your trip.</h3>

<% form_for @board_search, :html => {:id => 'search_form' } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :location_id, "Location:" %>
	<%= f.collection_select :location_id, @search_locations, :id, :to_s, {:prompt => true} %>
  </p>
	<p>
    <%= f.label :style_id, "Style:" %>
	<%= f.collection_select :style_id, Style.all, :id, :name, {:prompt => "All"} %>
  </p>
  
  <p><%= f.submit "Search", :class => 'submitBtn'  %></p>
<% end %>


