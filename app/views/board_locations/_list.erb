
<div id="locationPicker">
  <h3>Choose a location or enter a 
    <% if @board.id %>
      <%=link_to "new one", new_location_for_board_path(@board.id) , :id => 'new-loc' %>.
    <%  else %>
      <%=link_to "new one", new_board_location_path , :id => 'new-loc' %>.
    <%  end %>
  </h3>
    <select id="board_location_selector" onchange="set_board_location_id(this.value)" >
      <% @existing_locations.each do |location| %>
        <option value="<%= location.id %>"
           <% if !@board.nil? and @board.location_id == location.id -%> selected="selected"<% end -%>>
          <%= location.street %> <%= location.locality %>, <%= location.region %>
        </option>
      <% end %>
    </select>
</div>