<%# This template will get rendered for all of the static pages.%>

<%= render :partial => 'layouts/header' %>
<div id="mainContent">
  <%= render :partial => 'layouts/flashes' %>
  <%= yield %>
  <% if logged_in? && current_user.is_a?(Surfer) %>
    <%= render :partial => 'pages/surfer_sidebar' %>
  <% else %>
    <% if logged_in? && current_user.is_a?(Shop) %>
      <%= render :partial => 'pages/shop_sidebar' %>
    <% else %>
      <%= render :partial => 'pages/sidebar' %>
    <% end %>
  <% end %>
  <%= render :partial => 'layouts/footer' %>

